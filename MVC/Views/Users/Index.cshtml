@model IEnumerable<BLL.DTO.StaffDTO>

<div class="container-fluid">
	<div class="card">
		<div class="card-header">
			<h5 class="card-title fw-semibold">Staff Page</h5>
		</div>
		<div class="card-body">
			<button type="button" class="btn btn-success" data-bs-toggle="modal"
					data-bs-target="#addStaffModal">
				Create New Staff
			</button>
			<br />
			@Html.Raw(TempData["message"])
			<br />
			<table class="table table-responsive">
				<tr>
					<th>Staff ID</th>
					<th>Staff Name</th>
					<th>Username</th>
					<th>Role</th>
					<th>Email</th>
					<th>&nbsp;</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.StaffID</td>
						<td>@item.Name</td>
						<td>@item.Username</td>
						<td>@item.Role</td>
						<td>@item.Email</td>
						<td>
							<a href="#" id="btnEdit" class="btn btn-rounded btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#MyPopup" data-id="@item.StaffID">Edit</a>
							@* <a asp-action="Edit" asp-route-id="@item.StaffID" class="btn btn-info btn-sm">Edit</a> *@
							<a asp-action="Delete" onclick="return confirm('Are you sure you want to delete this position ?')" asp-route-id="@item.StaffID" class="btn btn-rounded btn-outline-danger btn-sm">Delete</a>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>

<div id="addStaffModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="addStaffModalLabel">Add Staff</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>

			<div class="modal-body">
				<form method="post" action="/Users/Create">

					<div class="mb-3">
						<label for="txtName" class="form-label">Name</label>
						<input type="text" class="form-control" id="txtName" required placeholder="Enter your Name" name="Name">
					</div>

					<div class="mb-3">
						<label for="ddRole" class="form-label">Role</label>
						<select class="form-select" id="ddRole" name="Role">
							<option value="">-----Select Role----</option>
							<option value="Admin">Admin</option>
							<option value="Approver">Approver</option>
							<option value="Requestor">Requestor</option>
						</select>
					</div>

					<div class="mb-3">
						<label for="ddPosition" class="form-label">Position</label>
						<select class="form-select" name="PositionID">
							<option value="">-----Select Position----</option>
							@foreach (var item in ViewBag.Positions)
							{
								<option value="@item.Value">@item.Text</option>
							}
						</select>
					</div>

					<div class="mb-3">
						<label for="txtEmail" class="form-label">Email address</label>
						<input type="email" class="form-control" id="txtEmail" required placeholder="Enter your Email Address" name="Email">
					</div>

					<div class="mb-3">
						<label for="txtUsername" class="form-label">Username</label>
						<input type="text" class="form-control" id="txtUsername" required placeholder="Enter your Username" name="Username">
					</div>

					<div class="mb-3">
						<label for="txtPassword" class="form-label">Password</label>
						<input type="password" class="form-control" id="txtPassword" required placeholder="Enter your password" name="Password">
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>

				</form>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->



<div class="modal fade" id="MyPopup" tabindex="-1" aria-labelledby="MyPopupLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="MyPopupLabel">Edit Staff</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="editStaffForm" action="@Url.Action("Edit", "Users")" method="post">
					<input type="hidden" name="StaffID" id="txtIdEdit" class="form-control" readonly />
					<div class="form-group">
						<label for="txtNameEdit">Name:</label>
						<input type="text" id="txtNameEdit" name="Name" class="form-control" />
					</div>
					<div class="form-group">
						<label for="ddRoleEdit">Role:</label>
						<select id="ddRoleEdit" name="Role" class="form-control">
							<option value="">-----Select Role----</option>
							<option value="Admin">Admin</option>
							<option value="Approver">Approver</option>
							<option value="Requestor">Requestor</option>
						</select>
					</div>
					<div class="form-group">
						<label for="ddPositionEdit">Position:</label>
						<select id="ddPositionEdit" name="PositionID" class="form-control">
							<option value="">-----Select Position----</option>
							@foreach (var item in ViewBag.Positions)
							{
								<option value="@item.Value">@item.Text</option>
							}
						</select>
					</div>
					<div class="form-group">
						<label for="txtEmailEdit">Email:</label>
						<input type="email" id="txtEmailEdit" name="Email" class="form-control" />
					</div>
					<div class="form-group">
						<label for="txtUsernameEdit">Username:</label>
						<input type="text" id="txtUsernameEdit" name="Username" class="form-control" />
					</div>
					<br />
					<button type="submit" class="btn btn-success">Save</button>
				</form>
			</div>
		</div>
	</div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$(function () {
		$("body").on('click', '#btnEdit', function () {
			var staffId = $(this).attr('data-id');

			$.ajax({
				url: 'Users/GetStaffData',
				data: { id: staffId },
				type: 'POST',
				success: function (response) {
					$('#txtIdEdit').val(response.staffID);
					$('#txtNameEdit').val(response.name);
					$('#ddRoleEdit').val(response.role);

					// Menyetel nilai 'selected' pada opsi dropdown Position
					$('#ddPositionEdit').val(response.positionsID);

					// Menetapkan nilai 'selected' pada opsi dropdown Role
					$('#ddRoleEdit').find('option[value="' + response.role + '"]').attr('selected', 'selected');

					// Menetapkan nilai 'selected' pada opsi dropdown Position
					$('#ddPositionEdit').find('option[value="' + response.positionID + '"]').attr('selected', 'selected');
					$('#txtEmailEdit').val(response.email);
					$('#txtUsernameEdit').val(response.username);
					$("#MyPopup").modal("show");
				}
			});
		});
	});
</script>

