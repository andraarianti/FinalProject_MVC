@model IEnumerable<BLL.DTO.StaffDTO>

<div class="container-fluid">
	<div class="card">
		<div class="card-header">
			<h5 class="card-title fw-semibold">Position Page</h5>
		</div>
		<div class="card-body">
			<button type="button" class="btn btn-success" data-bs-toggle="modal"
					data-bs-target="#addStaffModal">
				Create New Staff
			</button>
			<br />
			@Html.Raw(TempData["message"])
			<br />
			<table class="table table-responsive">
				<tr>
					<th>Staff ID</th>
					<th>Staff Name</th>
					<th>Username</th>
					<th>Role</th>
					<th>Email</th>
					<th>&nbsp;</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.StaffID</td>
						<td>@item.Name</td>
						<td>@item.Username</td>
						<td>@item.Role</td>
						<td>@item.Email</td>
						<td>
							<button type="button" class="btn btn-primary btn-sm" onclick="openEditModal('@item.StaffID')">Edit</button>
							<a asp-action="Delete" onclick="return confirm('Are you sure you want to delete this position ?')" asp-route-id="@item.StaffID" class="btn btn-danger btn-sm">Delete</a>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>

<div id="addStaffModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title mt-0" id="addStaffModalLabel">Add Staff</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>

			<div class="modal-body">
				<form method="post" action="/Users/Create">

					<div class="mb-3">
						<label for="txtName" class="form-label">Name</label>
						<input type="text" class="form-control" id="txtName" required placeholder="Enter your Name" name="Name">
					</div>

					<div class="mb-3">
						<label for="ddRole" class="form-label">Role</label>
						<select class="form-select" id="ddRole" name="Role">
							<option value="">-----Select Role----</option>
							<option value="Admin">Admin</option>
							<option value="Approver">Approver</option>
							<option value="Requestor">Requestor</option>
						</select>
					</div>

					<div class="mb-3">
						<label for="ddPosition" class="form-label">Position</label>
						<select class="form-select" name="PositionID">
							<option value="">-----Select Position----</option>
							@foreach (var item in ViewBag.Positions)
							{
								<option value="@item.Value">@item.Text</option>
							}
						</select>
					</div>

					<div class="mb-3">
						<label for="txtEmail" class="form-label">Email address</label>
						<input type="email" class="form-control" id="txtEmail" required placeholder="Enter your Email Address" name="Email">
					</div>

					<div class="mb-3">
						<label for="txtUsername" class="form-label">Username</label>
						<input type="text" class="form-control" id="txtUsername" required placeholder="Enter your Username" name="Username">
					</div>

					<div class="mb-3">
						<label for="txtPassword" class="form-label">Password</label>
						<input type="password" class="form-control" id="txtPassword" required placeholder="Enter your password" name="Password">
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>

				</form>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
