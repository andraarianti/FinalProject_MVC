@model IEnumerable<BLL.DTO.StaffDTO>

<div class="container-fluid">
	<div class="card">
		<div class="card-header">
			<h5 class="card-title fw-semibold">Position Page</h5>
		</div>
		<div class="card-body">
			<button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">Create New Staff</button>
			<br />
			<table class="table table-responsive">
				<tr>
					<th>Staff ID</th>
					<th>Staff Name</th>
					<th>Username</th>
					<th>Role</th>
					<th>&nbsp;</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.StaffID</td>
						<td>@item.Name</td>						
						<td>@item.Username</td>
						<td>@item.Role</td>
						@* get position name *@
						@* <td>
							@foreach (var position in item.Positions)
							{
								@position.PositionName
							}
						</td> *@
						<td>
							<a href="#" class="btn btn-primary btn-sm" onclick="editPosition('@item.StaffID')">Edit</a>
							<a href="#" class="btn btn-danger btn-sm" onclick="deletePosition('@item.StaffID')">Delete</a>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>
